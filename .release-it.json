{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireBranch": "main"
  },
  "npm": {
    "publish": true,
    "otp": "902120"
  },
  "github": {
    "release": false
  },
  "hooks": {
    "before:init": [
      "test -f .env && source .env || true",
      "pnpm test",
      "pnpm build"
    ],
    "after:bump": [
      "echo 'Version bumped to ${version}'"
    ],
    "after:release": [
      "echo 'Successfully released v${version}'"
    ]
  }
}